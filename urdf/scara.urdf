<?xml version="1.0"?>
<robot name="scara_robot">
    <!-- Base Link -->
    <link name="base_link"/>

    <!-- Link 1 -->
    <link name="link1">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.3"/>
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Link 2 -->
    <link name="link2">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.3"/>
            </geometry>
            <material name="green">
                <color rgba="0.0 1.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- End Effector -->
    <link name="end_effector">
        <visual>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="yellow">
                <color rgba="1.0 1.0 0.0 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Joints -->
    <!-- Revolute Joint 1 -->
    <joint name="joint1" type="revolute">
        <parent link="base_link"/>
        <child link="link1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10.0" velocity="1.0" lower="-3.14" upper="3.14"/>
    </joint>

    <!-- Revolute Joint 2 -->
    <joint name="joint2" type="revolute">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0.3 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10.0" velocity="1.0" lower="-3.14" upper="3.14"/>
    </joint>


    <!-- Fixed Joint for End Effector -->
    <joint name="joint3" type="fixed">
        <parent link="link2"/>
        <child link="end_effector"/>
        <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    </joint>

</robot>
